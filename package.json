{
  "name": "paddlepal",
  "version": "1.0.0",
  "private": true,
  "description": "PaddlePal (拍档) - Table Tennis Tournament Management System",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:init": "wrangler d1 execute paddlepal-db --file=sql/schema.sql",
    "db:init:local": "wrangler d1 execute paddlepal-db --local --file=sql/schema.sql",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "npm run typecheck && npm run lint && npm run test"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250214.0",
    "@eslint/js": "^10.0.1",
    "@types/papaparse": "^5.5.2",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.18",
    "wrangler": "^4.65.0"
  },
  "dependencies": {
    "hono": "^4.11.9",
    "papaparse": "^5.5.3"
  }
}
